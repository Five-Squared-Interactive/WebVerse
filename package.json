{
  "author": {
    "name": "Five Squared Interactive"
  },
  "name": "webverse",
  "description": "WebVerse Desktop Application",
  "keywords": [
    "WebVerse",
    "Application",
    "Web Metaverse"
  ],
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Five-Squared-Interactive/WebVerse"
  },
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.fivesqd.webverse",
    "icon": "images/WebVerse.png",
    "productName": "WebVerse",
    "copyright": "Copyright Â© 2025 Five Squared Interactive",
    "extraResources": [
      {
        "from": "Runtimes/Desktop/",
        "to": "../Runtimes/Desktop/"
      },
      {
        "from": "webverse.config",
        "to": "../webverse.config"
      },
      {
        "from": ".wv-settings",
        "to": "../.wv-settings"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true,
      "perMachine": false,
      "shortcutName": "WebVerse",
      "warningsAsErrors": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.4",
    "ps-node": "latest"
  }
}