{
  "author": {
    "name": "Five Squared Interactive"
  },
  "name": "webverse",
  "description": "WebVerse Desktop Application",
  "keywords": [
    "WebVerse",
    "Application",
    "Web Metaverse"
  ],
  "version": "2.1.6",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Five-Squared-Interactive/WebVerse"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^24.6.4"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.fivesqd.webverse",
    "icon": "images/WebVerse.png",
    "productName": "WebVerse",
    "copyright": "Copyright Â© 2025 Five Squared Interactive",
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true,
      "perMachine": false,
      "shortcutName": "WebVerse",
      "warningsAsErrors": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "publish": [
        "github"
      ],
      "extraResources": [
        {
          "from": "Runtimes/Desktop/",
          "to": "../Runtimes/Desktop/"
        },
        {
          "from": "webverse.config",
          "to": "../webverse.config"
        },
        {
          "from": ".wv-settings",
          "to": "../.wv-settings"
        }
      ]
    },
    "mac": {
      "publish": [
        "github"
      ],
      "extraResources": [
        {
          "from": "Runtimes/Desktop-Mac/",
          "to": "../Runtimes/Desktop-Mac/"
        },
        {
          "from": "webverse.config",
          "to": "../Resources/webverse.config"
        },
        {
          "from": ".wv-settings",
          "to": "../.wv-settings"
        }
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.4",
    "ps-node": "latest"
  }
}
